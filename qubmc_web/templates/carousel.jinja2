{% extends "layout.jinja2" %}

{% block carousel %}

    <div id="myCarousel" class="carousel slide myCarousel-pos" data-ride="carousel" data-interval="3000">
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1" class></li>
            <li data-target="#myCarousel" data-slide-to="2" class></li>
            <li data-target="#myCarousel" data-slide-to="3" class></li>
        </ol>
        <div class="carousel-inner carousel-width">
            <div class="item active">
                <img class="first-slide carousel-width" src="{{request.static_url('qubmc_web:static/scotlandtrip.jpg')}}" alt="First slide">
            </div>
            <div class="item">
                <img class="second-slide carousel-width" src="{{request.static_url('qubmc_web:static/spaintrip.jpg')}}" alt="Second slide">
            </div>
            <div class="item">
                <img class="third-slide carousel-width" src="{{request.static_url('qubmc_web:static/committee.jpg')}}" alt="Third slide">
            </div>
            <div class="item">
                <img class="third-slide carousel-width" src="{{request.static_url('qubmc_web:static/fresherstrip.jpg')}}" alt="Third slide">
            </div>
        </div>
        <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div> 
        
{% endblock %}